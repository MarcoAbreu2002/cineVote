@model cineVote.Models.Domain.Competition

<body>
    <div class="P-mt">
        <div class="container rounded bg-white mt-5 mb-5 hstack gap-3">
            <div class="row text-secondary bg-light border ms-auto">
                @if (Model != null)
                {
                    <div class="col-md-3 border-right">

                        <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                            <h1 class="font-weight-bold">@Model.Name</h1>
                        </div>
                    </div>
                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">Competition</h4>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-6">
                                    <label class="labels">Start Date:</label>
                                    <span>@Model.StartDate</span>
                                </div>
                                <div class="col-md-6">
                                    <br />
                                    <label class="labels">End Date:</label>
                                    <span>@Model.EndDate</span>
                                </div>
                                <div class="col-md-6">
                                    <br />
                                    <label class="labels">Nominees:</label>
                                    <span>@Model.Nominees</span>
                                </div>
                                <div class="mt-5">
                                    <a class="btn btn-primary profile-button"
                                        href="/User/Subscribe?username=@User.Identity.Name"><i
                                            class="bi bi-pen"></i>Subscribe</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <h1>No Competition</h1>
                }
            </div>
        </div>
    </div>
</body>
