<body>
    <div class="container rounded bg-white mt-5 mb-5 gap-3">
        <div class="rounded row text-secondary bg-light ms-auto">
            @if (Model != null)
            {
                <div class="col-md-12">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-4 border-bottom border-3">
                        <h1 class="font-weight-bold">Winners of Competition: @Model.Name</h1>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="p-3 py-4">
                        <div class="row">
                            <div class="col-md-6 fs-5">
                                <label class="labels">Start Date:</label>
                                <span>@Model.StartDate</span>
                            </div>
                            <div class="col-md-6 text-end fs-5">
                                <label class="labels">End Date:</label>
                                <span>@Model.EndDate</span>
                            </div>
                        </div>
                        <div class="category-container">
                            <div class="row mt-3">
                                @foreach (var category in Model.finalWinners.Keys)
                                {
                                    <div class="category-container">
                                        <h5 class="category-title mt-2 fs-4">@category.Name</h5>
                                        <div class="row mt-3">
                                            @foreach (var movieDict in Model.finalWinners[category])
                                            {
                                                if (movieDict != null)
                                                {
                                                    var movieId = movieDict["Id"].ToString();
                                                    var movieTitle = movieDict["Title"].ToString();
                                                    var movieImagePath = movieDict["PosterPath"].ToString();
                                                    var movieOverview = movieDict["Overview"].ToString();
                                                    var releaseDate = movieDict["ReleaseDate"].ToString();
                                                    var baseUrl = "https://image.tmdb.org/t/p/";
                                                    var fileSize = "w300";
                                                    var imageUrl = $"{baseUrl}{fileSize}{movieImagePath}";

                                                    <div class="col-md-4 mb-4">
                                                        <div class="card">
                                                            <img src="@imageUrl" class="card-img-top" alt="Movie Poster">
                                                            <div class="card-body">
                                                                <h5 class="card-title">@movieTitle</h5>
                                                                <p class="card-text">Release Date: @releaseDate</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-md-4 mb-4">
                                                        <div class="card">
                                                            <div class="card-body">
                                                                <h5 class="card-title">No placement...</h5>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>


                
                    </div>
                </div>

            }
            else
            {
                <h1>No Competition</h1>
            }
        </div>
    </div>
</body>
