@model cineVote.Models.Domain.User

@{
    ViewData["Title"] = "Profile";
}

<body>
    <div class="P-mt">
        <div class="container rounded bg-white mt-5 mb-5 hstack gap-3">
            <div class="row text-secondary bg-light border ms-auto">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        <span class="font-weight-bold">@Model.UserName</span>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right">Profile</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label class="labels">Name:</label>
                                <span>@Model.FirstName</span>
                            </div>
                            <div class="col-md-6">
                                <br />
                                <label class="labels">Surname:</label>
                                <span>@Model.LastName</span>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-12 mt-2">
                                    <label class="labels">Username:</label>
                                    <span>@Model.UserName</span>
                                </div>
                                <div class="col-md-12 mt-2">
                                    <label class="labels">Email:</label>
                                    <span>@Model.EmailAddress</span>
                                </div>
                            </div>
                            <div class="mt-5">
                                <a class="btn btn-primary profile-button" href="/User/EditProfile?username=@Model.UserName"><i class="bi bi-pen"></i> Edit Profile</a> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 bg-light border">
                    <div class="p-3 py-5 text-right">
                        <p><strong style="font-size:20px;">Subscribed Competitions:</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
