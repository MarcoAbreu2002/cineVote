@model cineVote.Models.Domain.User

@{
    ViewData["Title"] = "Profile";
}

<style>
    .margem-top{
        margin-top:14%
    }
</style>


<body>
    <div class="margem-top">
        <div class="container rounded bg-white mt-5 mb-5 border">
            <div class="row text-secondary bg-light ms-auto">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px"
                            src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        <span class="font-weight-bold fs-5 fw-bold">@Model.UserName</span>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div class="p-3 py-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="text-right fs-2">Profile</h4>
                        </div>
                        <form asp-action="EditProfile" method="post">
                            <input type="hidden" class="form-control" asp-for="Password">
                            <input type="hidden" class="form-control" asp-for="ImageUrl">
                            <input type="hidden" class="form-control" asp-for="Id">
                            <input type="hidden" class="form-control" asp-for="PersonId">
                            <input type="hidden" class="form-control" asp-for="IsAdmin">
                            <input type="hidden" class="form-control" asp-for="Email">
                            <input type="hidden" class="form-control" asp-for="NormalizedEmail">
                            <input type="hidden" class="form-control" asp-for="NormalizedUserName">
                            <input type="hidden" class="form-control" asp-for="EmailConfirmed">
                            <div class="row mt-2">
                                <div class="col-md-12 mt-2">
                                    <label class="labels fw-bold" asp-for="FirstName">Name: *</label>
                                    <input type="text" class="form-control" asp-for="FirstName">
                                </div>
                                <div class="col-md-12 mt-2">
                                    <label class="labels fw-bold" asp-for="LastName">Surname: *</label>
                                    <input type="text" class="form-control" asp-for="LastName">
                                </div>
                                
                                    <div class="col-md-12 mt-2">
                                    <label class="labels fw-bold" asp-for="UserName">Username: *</label>
                                        <input type="text" class="form-control" asp-for="UserName">
                                    </div>
                                    <div class="col-md-12 mt-2">
                                    <label class="labels fw-bold" asp-for="EmailAddress">Email: *</label>
                                        <input type="text" class="form-control" asp-for="EmailAddress">
                                    </div>
                                
                                <div class="mt-5">
                                    <button type="submit" class="btn text-white profile-button" style="background-color:rgb(67,37,101)"><i class="bi bi-pen"></i>Save Profile</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-md-4 bg-light border">
                    <div class="p-3 py-5 text-right fs-3">
                        <p class="fw-bold fs-4">Subscribed Competitions:</p>
                        <ul>
                            @foreach (var subscription in Model.subscritions)
                            {
                                if (subscription != null)
                                {
                                    <li>
                                        <span>subscription.Name</span>
                                        <div class="mt-2">
                                            <a class="btn text-white btn-sm" href="/User/Subscription" style="background-color:rgb(67,37,101)">See More</a>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li>No subscriptions yet!</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
