@using cineVote.Models.Domain
@{
    var notifications = ViewContext.HttpContext.Items["notifications"] as List<Notification>;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cineVote</title>
    <link rel="icon" type="image/png" href="https://es-2023.w3spaces.com/pipoca.png?bypass-cache=22116642" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/cineVote.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>

<style>
    .margin-right {
        margin-right: 2%;
    }

    .margin-left {
        margin-left: 2%
    }

    .unread {
        color: purple;
    }

    .bold-text {
        font-weight: bold;
    }

    .blue-dot {
        display: inline-block;
        width: 7px;
        height: 7px;
        border-radius: 50%;
        background-color: purple;
        margin-left: 5px;
        vertical-align: middle;
        margin-top: -2px;
    }

    .purple-ball {
        position: relative;
    }

    .purple-ball::after {
        content: '';
        position: absolute;
        top: 4px;
        right: 11px;
        width: 7px;
        height: 7px;
        background-color: purple;
        border-radius: 50%;
    }


    .hide {
        display: none;
    }
</style>



<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid margin-left">
                @if (string.IsNullOrEmpty(User.Identity.Name))
                {
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">CineVote</a>
                }
                else
                {
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">CineVote</a>
                }


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>




                <ul class="navbar-nav margin-right">
                    @if (string.IsNullOrEmpty(User.Identity.Name))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="AboutUs">About
                                Us</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="HowItWorks">How it
                                works</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" asp-area="" asp-controller="UserAuthentication"
                                asp-action="Registration">Create Account</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="UserAuthentication"
                                asp-action="Login">Login</a>
                        </li>

                    }
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Admin/AdminDashboard">Admin Dashboard</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" href="/Competition/DisplayCompetition">Competitions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Social/Index">Forum</a>
                        </li>
                    }
                    @if (User.IsInRole("user"))
                    {
                        var unreadNotifications = notifications != null ? notifications.Where(n => !n.isRead) : null;

                        <li class="nav-item dropdown mt-1">
                            <a type="button" class="btn " data-toggle="dropdown" href="#" id="notificationDropdown"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg width="35" height="20" viewBox="0 0 30 24" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <path
                                        d="M12 22C13.1 22 14 21.1 14 20H10C10 21.1 10.9 22 12 22ZM18 16V11C18 7.93 16.36 5.36 13.5 4.68V4C13.5 3.45 13.05 3 12.5 3C11.95 3 11.5 3.45 11.5 4V4.68C8.63 5.36 7 7.92 7 11V16L5 18V19H19V18L18 16Z"
                                        fill="white" />
                                </svg>
                                <span
                                    class="purple-ball @(unreadNotifications != null && unreadNotifications.Any() ? "" : "hide")"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                                @if (notifications.Any())
                                {
                                    var lastNotification = notifications.OrderByDescending(n =>
                                    n.NotificationId).LastOrDefault();

                                    foreach (var notification in notifications.OrderByDescending(n => n.NotificationId))
                                    {
                                        <li>
                                            <a class="dropdown-item"
                                                href="/User/clickNotification?competitionId=@notification.SubscriptionId&notificationId=@notification.NotificationId&notificationMessage=@notification.Name">
                                                <span class="notification-icon @(!notification.isRead ? "unread" : "")">
                                                    <i class="fas fa-bell"></i>
                                                </span>
                                                <span
                                                    class="notification-text @(!notification.isRead ? "bold-text" : "")">@notification.Name</span>
                                                @if (!notification.isRead)
                                                {
                                                    <span class="blue-dot"></span>
                                                }
                                            </a>
                                        </li>
                                        @if (notification != lastNotification)
                                        {
                                            <li class="dropdown-divider"></li>
                                        }
                                    }
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item">
                                            <span class="notification-icon">
                                                <i class="fas fa-bell"></i>
                                            </span>
                                            <span class="notification-text">No Notifications to Show</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Social/Index">Forum</a>
                        </li>

                        <li class="nav-item ">
                            <a class="nav-link text-white" href="/Competition/DisplayCompetition">Competitions</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" href="/User/Profile?username=@User.Identity.Name">Profile</a>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(User.Identity.Name))
                    {

                        <li><a class="nav-link text-white" asp-area="" asp-controller="UserAuthentication"
                                asp-action="Logout">Logout</a></li>
                    }

                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - cineVote
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            function checkForNewNotifications() {
                $.ajax({
                    url: '/notifications/check',
                    method: 'GET',
                    success: function (response) {
                        // Handle the server response and update the page
                        // For example, append the new notifications to the existing list
                        var $notificationsList = $('#notifications-list');
                        response.forEach(function (notification) {
                            var $notificationItem = $('<li>').addClass('dropdown-item');
                            var $notificationIcon = $('<span>').addClass('notification-icon').html('<i class="fas fa-bell"></i>');
                            var $notificationText = $('<span>').addClass('notification-text').text(notification.Name);
                            $notificationItem.append($notificationIcon, $notificationText);
                            $notificationsList.append($notificationItem);
                        });
                    },
                    error: function (xhr, status, error) {
                        // Handle any errors that occur during the AJAX request
                        console.error('Error checking for new notifications:', error);
                    }
                });
            }

            // Call the function every 10 seconds (adjust the interval as needed)
            setInterval(checkForNewNotifications, 10000);
        });
    </script>
</body>