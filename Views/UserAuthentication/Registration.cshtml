@model cineVote.Models.DTO.RegistrationModel;

<div class="row" style="display: flex;justify-content: center; align-items: center;">
    <h1 style="display: flex;justify-content: center; align-items: center;">Create a new client</h1>
    <hr>
    <div class="col-6">

        <div class="card">
            <div class="card-header; text-black">
                <h3 class="mt-3 text-center">Fill the form</h3>
            </div>
            <div class="card-body col-md-8; text-black">
                <form asp-controller="UserAuthentication" asp-action="Registration" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label; m-2">First Name:</label>
                        <input asp-for="FirstName" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Last Name:</label>
                        <input asp-for="LastName" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Email:</label>
                        <input asp-for="Email" type="email" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Username:</label>
                        <input asp-for="Username" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Password:</label>
                        <input asp-for="Password" type="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Confirm Password:</label>
                        <input asp-for="PasswordConfirm" type="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label; m-2">Profile Image:</label>
                        <input type="file" asp-for="ImageUrl" name="ImageUrl" class="form-control" />
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary" style="background-color:rgb(67,37,101)">Create</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </div>
</div>
