@model cineVote.Models.DTO.LoginModel
@{
    ViewData["Title"] = "Login";
}


<style>
    .msg {
        padding: 0px;
    }


    .text-danger {
        color: red;
    }

    .margem-topo {
        margin-top: 8%;
    }
</style>

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>

<div class="row mt-5">
    <div class="col-md-6 offset-3 margem-topo">
        <div class="card mt-5">
            <p>
            <h4 class="text-center text-dark fs-3 fw-bold">Log in to your account</h4>
            <hr class="text-black" />
            </p>
            @if (TempData["Error"] != null)
            {
                <div class="col-md-12 alert alert-danger">
                    <span><b>Sorry!</b> - @TempData["Error"]</span>
                </div>
            }
            <div class="col-md-8 offset-2 text-dark">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group fs-6 fw-bold">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control mt-3">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 fs-6 fw-bold">
                        <label asp-for="Password" class="control-label"></label>
                        <div class="input-group">

                            <input asp-for="Password" class="form-control" id="passwordInput" />
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="fa fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="msg text-danger mt-1">@TempData["msg"]</div>
                    }
                    <div class="text-center">
                        <button type="submit" class="mt-3 mb-3 btn text-white text-white"
                            style="background-color:rgb(67,37,101)">Login</button>
                        <a class="text-alert" href="/UserAuthentication/Registration">Not a user? Signup</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        var passwordInput = document.getElementById("passwordInput");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            this.innerHTML = '<i class="fa fa-eye-slash"></i>';
        } else {
            passwordInput.type = "password";
            this.innerHTML = '<i class="fa fa-eye"></i>';
        }
    });
</script>