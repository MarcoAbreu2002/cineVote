@model cineVote.Models.DTO.LoginModel
@{
    ViewData["Title"] = "Login";
}


<style>

    .msg {
        padding: 0px;
    }


    .text-danger {
        color: red;
    }
</style>

<div class="row mt-5">
    <div class="col-md-6 offset-3">
        <p>
            <h4 class="text-center">Log in to your account</h4>
            <hr>
        </p>
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="card mt-5">
            <div class="col-md-8 offset-2 text-dark">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-4">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control mt-3">
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control mt-3" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    @if (TempData["msg"] != null)
                    {
                        <div class="msg">@TempData["msg"]</div>
                    }
                    <div class="text-center">
                        <button type="submit" class="mt-3 mb-3 btn btn-primary text-white" style="background-color:rgb(67,37,101)">Login</button>
                        <a class="text-alert" href="/UserAuthentication/Registration">Not a user? Signup</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>